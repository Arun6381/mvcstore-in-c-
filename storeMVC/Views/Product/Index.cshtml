@model List<Product>
@{
}
<h2 class="text-center mb-5"> List of Products</h2>
<div class="row mb-5">
	<div class="col">
		<a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
	</div>
	<div ></div>
</div>
<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Brand</th>
			<th>category</th>
			<th>price</th>
			<th>image</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var product in Model)
		{
			<tr>
				<td>@product.Id</td>
				<td>@product.Name</td>
				<td>@product.Brand</td>
				<td>@product.Category</td>
				<td>@(product.Price)$</td>
				<td><img src="/Products/@product.ImageFileName" width="100"/></td>
				<td>@product.CreateAt.ToString("dd/MM/yyyy")</td>
				<td style="white-space:nowrap">
					<a class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
					<a class="btn btn-primary" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">Delete</a>
					</td>
			</tr>
		}
	</tbody>
</table>